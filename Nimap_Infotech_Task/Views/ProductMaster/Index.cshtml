@model PagedList<Nimap_Infotech_Task.Models.ProductMaster>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Back to Home", "Index","Home")
</p>

@using PagedList.Mvc;
@using PagedList;

<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.First().ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "ProductMaster", new { ProductId = item.ProductId }, null) |
                @Html.ActionLink("Delete", "Delete", new { ProductId = item.ProductId })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, pageNumber => Url.Action("Index", "ProductMaster", new { pageNumber }))
